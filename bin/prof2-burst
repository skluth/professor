            GOFS.append(float(l.strip()))

else:
    NBINS=0
    PNAMES=[]
    for i in xrange(opts.NSAMPLES):
        thisSEED=opts.NSAMPLES*(1 + opts.SUBRUN) + i + 1
        IDICT, PARAMS, RUNS = mkSmearedIpolSet(IHISTOS, USEDPARAMS, thisSEED)
        PNAMES=PARAMS[0]
